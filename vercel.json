{
    "version": 2,
    "framework": "nextjs",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node",
            "config": {
                "buildCommand": "NODE_OPTIONS='--experimental-json-modules' pnpm build",
                "installCommand": "pnpm install",
                "startCommand": "NODE_OPTIONS='--experimental-json-modules' pnpm start"
            }
        }
    ],
    "routes": [
        {
            "src": "/_build/(.*)",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/_build/$1"
        },
        {
            "src": "/assets/(.*)",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/assets/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
}